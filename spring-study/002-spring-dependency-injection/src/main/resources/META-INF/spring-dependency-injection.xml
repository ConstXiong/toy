<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="friend_1" class="constxiong.Friend">
		<property name="name" value="friend_1"/>
	</bean>
	
	<bean id="friend_2" class="constxiong.Friend">
		<property name="name" value="friend_2"/>
	</bean>
	
	<bean id="favorite" class="constxiong.Favorite">
		<constructor-arg name="name" value="code"></constructor-arg>
	</bean>
	
	<bean id="ConstXiong" class="constxiong.User" autowire="byType">
	</bean>
	
	<bean id="user" class="constxiong.User">
		<property name="friends">
			<list>
				<ref bean="friend_2" />
				<ref bean="friend_1" />
			</list>
		</property>
	</bean>

</beans>
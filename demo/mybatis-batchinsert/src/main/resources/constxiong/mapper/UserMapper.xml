<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="constxiong.mapper.UserMapper">

    <select id="selectUsers" resultType="constxiong.po.User">
        select * from user
    </select>

    <insert id="insertUser" parameterType="constxiong.po.User">
        insert into user values(#{id}, #{name})
    </insert>

    <delete id="deleteUsers">
      delete from user
    </delete>

    <insert id="insertUserBatch" parameterType="java.util.List">
        insert into user values
        <foreach collection="list" item="item" separator =",">
            (#{item.id}, #{item.name})
        </foreach>
    </insert>

</mapper>